  <script>
    function onLoadVNav() {
      let cur_link = window.location.href;
      let cur_page_key = cur_link.slice(cur_link.indexOf('/admin') + 7, cur_link.length).split('/')[0]
      const v_navlink = document.querySelectorAll('.vertical-nav-link');
      if (v_navlink) {
        v_navlink.forEach(nl => {
          if (nl.href.split('/')[nl.href.split('/').length - 1] === cur_page_key) {
            nl.classList.add('active');
          }
          else {
            nl.classList.remove('active');
          }
        })
      }
    }
  </script>
