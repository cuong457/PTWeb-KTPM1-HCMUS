<div class="container pt-5 mb-5">
  <div class="row pb-4">
    <div class="col-12 col-lg-8">
      <div class="bg-white h-100">
        <div class="rtab">
          <i class="bi bi-credit-card-2-front-fill"><span class="lg-title"> Payment</span></i>

          <div class="detail__food-list row p-4">
            {{#each items}}
            <div class="col-6 pb-3 mb-3 border-bottom border-gray">
              <div class="row">
                <div class="col-4 p-0">
                  <span><img src="{{productId.foodThumbnail}}"
                      class="img-fluid small-img smooth-border">
                </div>
                <div class="col-8 p-0">
                  <p class="sm-title wrap-text mb-0">{{productId.name}}</p>
                  <p class="sm-title text-indigo mb-0">Thương Hiệu: {{productId.manufacturer}}</p>
                  {{!-- <p class="sm-title mb-0">Tình trạng: <span class="text-green">{{status}}</span></p>
                  --}}
                  <div class="sm-title mb-0">
                    <i class="fa-solid fa-location-dot "></i>
                    <span>&#160 Giao hàng tại Việt Nam</span>
                  </div>
                  <p class="sm-title"><i class="fa-solid fa-dollar-sign"></i>&#160 Giá: {{toPrice
                    productId.price}} VNĐ
                  </p>
                  <p class="sm-title"><i class="bi bi-box-seam-fill"></i>&#160 Số lượng: {{quantity}}</p>
                </div>
              </div>
            </div>
            {{/each}}
          </div>

          <div class="row p-4 pt-0 pb-3">
            <div class="d-flex">
              <p class="me-title m-auto ms-0">Tạm tính:</p>
              <p class="me-title">{{{toPrice subTotal}}} VNĐ</p>
            </div>
            <div class="d-flex">
              <p class="me-title m-auto ms-0">Phí vận chuyển:</p>
              <p class="me-title">20.000 VNĐ</p>
            </div>
          </div>
          <div class="row p-4 pt-0">
            <hr>
            <div class="d-flex">
              <p class="lg-title m-auto ms-0">Tổng cộng</p>
              <p class="lg-title">{{{toPrice total}}} VNĐ</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <div class="bg-white">
        {{!-- Infor fullfill --}}
        <div class="p-4 pt-3">
          <p class="fs-5 itdetail-lg-title">Thông tin đơn hàng.</p>
          <div class="row pt-3">
            <div class="col-6">
              <input type="text" class="form-control" placeholder="Họ và tên" value="{{user.name}}" disabled>
            </div>
            <div class=" col-6">
              <input type="text" class="form-control" name="phone" placeholder="Số điện thoại" value="{{user.phone}}"
                disabled>
            </div>
          </div>
          <div class="pt-3">
            <input type="text" class="form-control" name="address" placeholder="Địa chỉ" value="{{user.address}}"
              disabled>
          </div>

          <div class="pt-3">
            <input type="text" name="note" class="form-control" placeholder="Ghi chú: {{note}}" disabled>
          </div>
        </div>
        {{!-- End infor fullfill --}}
      </div>

      <div class="col">
        <div class="bg-white mt-3 p-4 pt-3">
          {{!-- Payment methods select --}}
          <p class="fs-5 itdetail-lg-title pb-4">Phương thức thanh toán.</p>

          <div class="row pt-2 text-center">
            <div class="col-auto d-flex align-items-center mx-0 mx-lg-auto mx-xxxl-1">
              <img src="{{paymentMethod.img}}" class="itdetail-icon">
            </div>
            <div class="col-auto d-flex align-items-center">
              <label class="form-check-label" for="{{paymentMethod.id}}">
                {{paymentMethod.label}}
              </label>
            </div>
          </div>
          {{!-- End payment methods select --}}
        </div>
      </div>
    </div>
  </div>
</div>